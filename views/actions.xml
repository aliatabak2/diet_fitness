<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">

    <!-- Programlar -->
    <record id="action_diet_programs" model="ir.actions.act_window">
      <field name="name">Programlar</field>
      <field name="res_model">diet.program</field>
      <field name="view_mode">list,form</field>
      <field name="context">{}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Henüz bir program yok</p>
        <p>Yeni bir diyet programı ekleyin.</p>
      </field>
    </record>

    <!-- Üyeler -->
    <record id="action_diet_members" model="ir.actions.act_window">
      <field name="name">Üyeler</field>
      <field name="res_model">diet.member</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- DİKKAT: 'reciepes' yazım hatası düzeltiliyor -> 'recipes' -->
    <record id="action_diet_recipes" model="ir.actions.act_window">
      <field name="name">Yemek Tarifleri</field>
      <field name="res_model">diet.recipe</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Egzersizler -->
    <record id="action_diet_exercises" model="ir.actions.act_window">
      <field name="name">Egzersizler</field>
      <field name="res_model">diet.exercise</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Günlük Planlar -->
    <record id="action_diet_daily_plans" model="ir.actions.act_window">
      <field name="name">Günlük Planlar</field>
      <field name="res_model">diet.daily.plan</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Randevular -->
    <record id="action_diet_appointment" model="ir.actions.act_window">
      <field name="name">Randevular</field>
      <field name="res_model">diet.appointment</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
